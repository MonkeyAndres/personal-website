---
import type { Locale } from '@lib/i18n';

interface Props {
  date: Date;
  locale: Locale;
}

const { date, locale } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(locale, {
      month: "long",
      day: "2-digit",
      year: "numeric",
    })
  }
</time>
